<h2 class="text-c">Register a new Account!</h2>

<% if @errors %>
  <%= erb :"_errors", locals: { errors: @errors } %>
<% end %>

<form method="POST" action="/users">
  <input class="block w-70 mar-t-2 mar-b-2 pad-1 center" type="text" name="user[username]" placeholder="Username" value="<%= @user.try(:username) %>">
  <input class="block w-70 mar-t-2 mar-b-2 pad-1 center" type="email" name="user[email]" placeholder="Email" value="<%= @user.try(:email) %>">
  <input class="block w-70 mar-t-2 mar-b-2 pad-1 center" type="password" name="user[password]" placeholder="Password" value="">
  <input class="block w-70 mar-t-2 mar-b-3 pad-2 round-1 text-c submit center" type="submit" value="Get pitted">
</form>
